     <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
     <link href="https://fonts.googleapis.com/css?family=Oswald:300,400,500,600,700&display=swap" rel="stylesheet">

     <style>
          * {
               margin: 0;
               padding: 0;
               box-sizing: border-box;
               font-family: "Muli", sans-serif;
               -webkit-font-smoothing: antialiased;
               color: #000;
          }

          p {
               margin: 0 !important;
          }

          .admin-home-page {
               width: 100vw;
               height: 100vh;
               background-color: #f07f2d;
               display: flex;
          }

          /* Header */
          .admin-nav {
               width: 331px;
               height: 100vh;
               background: #ffffff;
               box-shadow: 15px 15px 0px #b8b8b8;
               border-radius: 0px 67px 67px 0px;
               padding: 50px;
               display: flex;
               flex-direction: column;
               justify-content: space-between;
          }

          .admin-nav-items {
               display: flex;
               flex-direction: column;
               gap: 24px;
          }

          .admin-nav-item {
               display: flex;
               align-items: center;
               gap: 8px;
               cursor: pointer;
          }

               .admin-nav-item.active .admin-nav-item-text,
               .admin-nav-item:hover .admin-nav-item-text {
                    color: #f07f2d;
               }

                    .admin-nav-item.active img,
                    .admin-nav-item:hover img {
                         filter: invert(51%) sepia(80%) saturate(695%) hue-rotate(342deg) brightness(99%) contrast(90%);
                    }

          .admin-nav-item-image {
               width: 30px;
               height: 24px;
               display: flex;
               justify-content: center;
               align-items: center;
          }

               .admin-nav-item-image img {
                    height: 24px;
                    width: auto;
               }

          .admin-nav-item-text {
               color: #000;
               font-weight: 700;
               font-size: 24px;
               line-height: 29px;
          }

          .admin-nav-status-container {
               display: flex;
               align-items: center;
               gap: 8px;
               cursor: pointer;
          }

          .admin-nav-status-image {
               width: 30px;
               height: 24px;
               display: flex;
               justify-content: center;
               align-items: center;
          }

               .admin-nav-status-image img {
                    height: 24px;
                    width: auto;
               }

          .admin-nav-status-text {
               color: #000;
               font-weight: 500;
               font-size: 20px;
               line-height: 24px;
          }

          /* Content */
          .admin-home-content {
               width: 100%;
               padding: 25px 50px;
               display: grid;
               gap: 50px;
               grid-template-columns: repeat(2, 1fr);
               grid-template-rows: repeat(3, 1fr);
          }

          .admin-home-widget {
               width: 100%;
               height: 100%;
               padding: 24px;
               background: #ffffff;
               box-shadow: 15px 15px 0px #b8b8b8;
               border-radius: 30px;
               display: flex;
               flex-direction: column;
               gap: 20px;
          }

          .admin-home-widget-title {
               color: #000;
               font-weight: 700;
               font-size: 24px;
               line-height: 29px;
          }

          .admin-home-widget-description {
               color: #000;
               font-weight: 500;
               font-size: 18px;
               line-height: 22px;
          }

          .admin-home-widget-container {
               display: flex;
               justify-content: space-between;
          }

          .admin-home-widget-container-item {
               display: flex;
               flex-direction: column;
               gap: 8px;
          }

          .admin-home-widget-container-item-image {
               width: 40px;
               height: 40px;
               display: flex;
               justify-content: center;
               align-items: center;
               margin: 0 auto;
          }

               .admin-home-widget-container-item-image img {
                    height: 40px;
                    width: auto;
               }

          .admin-home-widget-container-item-text {
               color: #000;
               font-weight: 400;
               font-size: 12px;
               line-height: 15px;
               text-align: center;
          }

          .admin-home-widget-data-container {
               display: flex;
               flex-direction: column;
               gap: 8px;
          }

          .admin-home-widget-data-container-item {
               display: flex;
               justify-content: space-between;
          }

          .admin-home-widget-data-container-item-primary {
               width: 40%;
               color: #000;
               font-weight: 600;
               font-size: 18px;
               line-height: 22px;
               text-overflow: ellipsis;
               white-space: nowrap;
               overflow: hidden;
          }

          .admin-home-widget-data-container-item-secondary {
               width: 30%;
               color: #000;
               font-weight: 500;
               font-size: 18px;
               line-height: 22px;
          }

          .admin-home-widget-data-container-item-image {
               width: 20px;
               height: 16px;
               display: flex;
               justify-content: center;
               align-items: center;
               cursor: pointer;
          }

               .admin-home-widget-data-container-item-image img {
                    height: 16px;
                    width: auto;
               }
     </style>

