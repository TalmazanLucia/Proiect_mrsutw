                            <div class="latest-large set-bg" data-setbg="./../../img/letest-blog/latest-3.jpg">
                                <div class="ll-text">
                                    <h5><a href="#">Congratulations UTM Rugby Team</a></h5>
                                    <ul>
                                        <li>Sep 21, 2021</li>
                                        <li>20 Comment</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Class Details Section End -->
    <!-- Class Timetable Section Begin -->
    <section class="class-timetable-section class-details-timetable spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="class-details-timetable_title">
                        <h5>Training schedule</h5>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="class-timetable details-timetable">
                        <table>
                            <thead>
                                <tr>
                                    @{
                                        foreach (var head in TableHeaders)
                                        {
                                            <th>
                                                @head
                                            </th>
                                        }
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model != null)
                                    {
                                        foreach (var Data in Model)
                                        {
                                            <tr>
                                                <td class="class-time"><h5>@Data.Prof</h5></td>
                                                @{
                                                    if (@Data.id % 2 == 1)
                                                    {
                                                        if (@Data.Luni != "")
                                                        {
                                                            <td class="dark-bg hover-dp ts-meta">@Data.Luni</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="dark-bg blank-td"></td>
                                                        }
                                                        if (@Data.Marti != "")
                                                        {
                                                            <td class="hover-dp ts-meta">@Data.Marti</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="blank-td"></td>
                                                        }
                                                        if (@Data.Miercuri != "")
                                                        {
                                                            <td class="dark-bg hover-dp ts-meta">@Data.Miercuri</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="dark-bg blank-td"></td>
                                                        }
                                                        if (@Data.Joi != "")
                                                        {
                                                            <td class="hover-dp ts-meta">@Data.Joi</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="blank-td"></td>
                                                        }
                                                        if (@Data.Vineri != "")
                                                        {
                                                            <td class="dark-bg hover-dp ts-meta">@Data.Vineri</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="dark-bg blank-td"></td>
                                                        }
                                                        if (@Data.Sambata != "")
                                                        {
                                                            <td class="hover-dp ts-meta">@Data.Sambata</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="blank-td"></td>
                                                        }
                                                        if (@Data.Duminica != "")
                                                        {
                                                            <td class="dark-bg hover-dp ts-meta">@Data.Duminica</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="dark-bg blank-td"></td>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        if (@Data.Luni != "")
                                                        {
                                                            <td class="hover-dp ts-meta">@Data.Luni</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="blank-td"></td>
                                                        }
                                                        if (@Data.Marti != "")
                                                        {
                                                            <td class="dark-bg hover-dp ts-meta">@Data.Marti</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="dark-bg blank-td"></td>
                                                        }
                                                        if (@Data.Miercuri != "")
                                                        {
                                                            <td class="hover-dp ts-meta">@Data.Miercuri</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="blank-td"></td>
                                                        }
                                                        if (@Data.Joi != "")
                                                        {
                                                            <td class="dark-bg hover-dp ts-meta">@Data.Joi</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="dark-bg blank-td"></td>
                                                        }
                                                        if (@Data.Vineri != "")
                                                        {
                                                            <td class="hover-dp ts-meta">@Data.Vineri</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="blank-td"></td>
                                                        }
                                                        if (@Data.Sambata != "")
                                                        {
                                                            <td class="dark-bg hover-dp ts-meta">@Data.Sambata</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="dark-bg blank-td"></td>
                                                        }
                                                        if (@Data.Duminica != "")
                                                        {
                                                            <td class="hover-dp ts-meta">@Data.Duminica</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="blank-td"></td>
                                                        }

                                                    }
                                                }
                                                <td class="class-time"><h5>@Data.LoculDesfasurarii</h5></td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>