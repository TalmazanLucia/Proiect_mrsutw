                            }
                            else
                            {
                                <a href="@Url.Action("Index", "SignIn")" class="primary-btn-new-btn">Appointment</a>

                            }
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Class Details Section Begin -->
