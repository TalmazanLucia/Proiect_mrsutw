@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[] TableHeaders = new string[] {"",
                            "Monday",
                            "Tuesday",
                            "Wednesday",
                            "Thursday",
                            "Friday",
                            "Saturday",
                            "Sunday",
                            "Place"};
}
@using System.Web.Optimization

<!DOCTYPE html>

<html>
<body>
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="./../../img/breadcrumb-bg.jpg">
