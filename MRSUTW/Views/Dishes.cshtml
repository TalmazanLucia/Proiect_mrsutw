
@{
    ViewBag.Title = "Dishes";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@using System.Web.Optimization
@model MRSUTW.Models.Recipes

<!DOCTYPE html>
<html>
<body>
    <section class="pricing-section spad">
        <div class="container">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Nutrition</span>
                    <h2>Recipes</h2>
                </div>
            </div>
            <div class="row align-items-center flex-row-reverse">
                <div class="col-lg-6">
                    <h1 style="color:white;">Recipe</h1>
                    <h6 style="color:#FF6700;">Recipe</h6>
                    <p>@Model.Description</p>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label style="color:gray;">Name:  </label>
                                <p style="color:white;">@Model.Name</p>
                            </div>
                            <div class="media">
                                <label style="color:gray;">Ingredients:</label>
                                <p style="color:white;">@Model.Ingredients</p>
                            </div>
                            <div class="media">
                                <label style="color:gray;">Phone:</label>
                                <p style="color:white;">060-123-456</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label style="color:gray;">Method:  </label>
                                <p style="color:white;">@Model.Method</p>
                            </div>
                            <div class="media">
                                <label style="color:gray;">Description:</label>
                                <p style="color:white;">@Model.Description Yr</p>
                            </div>
                            <div class="media">
                                <label style="color:gray;">Cook:</label>
                                <p style="color:white;">@Model.Cook</p>
                            </div>
                            <div class="media">
                                <label style="color:gray;">Prep:</label>
                                <p style="color:white;">@Model.Prep</p>
                            </div>
                            <div class="media">
                                <label style="color:gray;">kcal:</label>
                                <p style="color:white;">@Model.kcal</p>
                            </div>
                            <div class="media">
                                <label style="color:gray;">fat:</label>
                                <p style="color:white;">@Model.fat</p>
                            </div>
                            <div class="media">
                                <label style="color:gray;">carbs:</label>
                                <p style="color:white;">@Model.carbs</p>
                            </div>
                            <div class="media">
                                <label style="color:gray;">protein:</label>
                                <p style="color:white;">@Model.protein</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-avatar">
                        @if (Model.Identity == "Female")
                        {
                            <img src="./../../img/team/team-1.jpg" title="" alt="">
                        }
                        else
                        {
                            <img src="./../../img/team/team-3.jpg" title="" alt="">
                        }
                    </div>
                </div>
            </div>
            <div class="counter">
                <div class="row">
                    <div class="col-6 col-lg-3">
                        <div class="count-data text-center">
                            <h6 style="color:#FF6700;" class="count h2" data-to="190" data-speed="190">800</h6>
                            <p class="m-0px font-w-600">Hours practiced</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="count-data text-center">
                            <h6 style="color:#FF6700;" class="count h2" data-to="500" data-speed="500">500</h6>
                            <p class="m-0px font-w-600">Happy Clients</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="count-data text-center">
                            <h6 style="color:#FF6700;" class="count h2" data-to="150" data-speed="150">250</h6>
                            <p class="m-0px font-w-600">Workouts done</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="count-data text-center">
                            <h6 style="color:#FF6700;" class="count h2" data-to="850" data-speed="850">40</h6>
                            <p class="m-0px font-w-600">Diplomas of merit</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @Scripts.Render("~/bundles/style/css")
    @Scripts.Render("~/bundles/jquery-3.3.1/js")
    @Scripts.Render("~/bundles/jquery.magnific-popup/js")
    @Scripts.Render("~/bundles/masonry-pkgd/js")
    @Scripts.Render("~/bundles/jquery-barfiller/js")
    @Scripts.Render("~/bundles/jquery-slicknav/js")
    @Scripts.Render("~/bundles/owl-carousel/js")
    @Scripts.Render("~/bundles/main/js")
    @Scripts.Render("~/bundles/bootstrap/js")
</body>
</html>

