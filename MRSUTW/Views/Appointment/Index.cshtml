@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Web.Optimization

<!DOCTYPE html>

<html>
<body>
    <section class="breadcrumb-section set-bg" data-setbg="./../../img/breadcrumb-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>
                            <a href="@Url.Action("Index", "Sala")" class="primary-btn-new-btn">Inapoi</a>
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="class-details-section spad">
        <div class="login-form">

            @using (Ajax.BeginForm("Index", "Appointment", new AjaxOptions
            {
                HttpMethod = "POST",
                OnSuccess = "succes",
                OnFailure = "failure",
                UpdateTargetId = "resultTarget"
            }))
            {
                <div class="form-group">
                    <select style="margin-bottom: 2rem; width: 100%; width: 100%; padding: 10px; font-size: 16px; border-radius: 5px; border: none; background-color: #f2f2f2; color: #333; margin-bottom: 8px; ">
                        <option disabled>Choose Trainer</option>
                        <option value="Trainer1">Vasia</option>
                        <option value="Trainer2">Ghena</option>
                        <option value="Trainer3">Borea</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" id="Username" name="Username" placeholder="Username:" value="">
                </div>

                <button type="submit">Submit</button>
            }
        </div>
    </section>

</body>
</html>
